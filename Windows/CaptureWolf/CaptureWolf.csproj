		<LangVersion>latest</LangVersion>
		<UseWindowsForms>true</UseWindowsForms>
		<PackageIcon>icon.jpg</PackageIcon>
		<PackageIconUrl />
		<PackageId>CaptureWolf</PackageId>
		<Authors>CaptureWolf</Authors>
		<Company>CaptureWolf</Company>
		<Product>CaptureWolf</Product>
